# Configuration file for Intel icc 8.x under Linux

CC= icc
CCFLAGS_NO_C=  -I$(INCDIR) -w1 -O2 -ip -openmp
CCFLAGS= $(CCFLAGS_NO_C) -c

CXX= icpc
CXXL= icpc
CXXCFLAGS_NO_C= -I$(INCDIR) -Ob2 -w1 -ansi -O2 -ip -ansi_alias -align -openmp
CXXCFLAGS= $(CXXCFLAGS_NO_C) -c
CXXLFLAGS= -L. -L$(LIBDIR) -O2 -ip -openmp

ARCREATE= ar crv

include $(LEVELS_SRC)/config/rules.common
